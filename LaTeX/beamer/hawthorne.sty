\newcommand{\light}{\setbeamercolor{normal text}{%
    fg=myblue, %fg=mDarkTeal, ultramarine
    bg=black!2}
    }
\newcommand{\dark}{\setbeamercolor{normal text}{%
  fg=black!2,
  bg=myblue%, ultramarine % bg=mDarkTeal %
  }
}

%-- special slide types --% 
\newcommand{\sectionbreak}[1]{%
  \dark 
  \section{#1} 
  \addtocounter{framenumber}{-1}
  \light
}
\newcommand{\pictureslide}[1]{%
  {
  \setbeamertemplate{navigation symbols}{}
  \setbeamertemplate{background canvas}{\includegraphics[height=\paperheight, width =\paperwidth]{#1}}
  \begin{frame}[plain]
  \end{frame}
  }
}
\newcommand{\titleslide}{
  \begin{frame}[plain]
  \titlepage
  \end{frame}
  \addtocounter{framenumber}{-1}
}

